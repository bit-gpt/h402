{
  "compilerOptions": {
    "target": "ES2022",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "checkJs": true,
    "types": ["node"],
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "src/paywall-app"]
}
